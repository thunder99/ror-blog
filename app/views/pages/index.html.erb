<p><%= link_to "Create new post", new_post_path, class: "btn btn-default"%></p>
<p><%= link_to "Show Gallery", photos_path, class: "btn btn-default"%></p>
<div class="pt">
<% @posts.each do |post| %><br />
<hr>
<h1><%= link_to post.title, post_path(post.id)%></h1>
<p><%= sanitize post.body %></p>
<%= image_tag post.user.avatar.url(:thumb), width: 30, height:30 %>
<p>Author: <%= post.user.nickname%> |
Create at: <%= post.created_at%>
</p>
<% if current_user != nil and current_user.id == post.user_id %>
<p><%= link_to "Edit", edit_post_path(post.id) %>
or
<%= link_to "Delete", post_path(post.id), data: {confirm: 'Are you sure?'}, method: :delete %></p>
<% end %>
<% end %>
</div>

